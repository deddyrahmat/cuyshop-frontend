{
  "compilerOptions": {
    "jsx": "react-jsx",
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "lib": [
      "ES2015", // Tambahkan ini jika diperlukan
      "DOM"
    ]
  },
  "include": [
    "vite.config.ts",
    "src/**/*",
    "tailwind.config.js",
    ".eslintrc.cjs",
    "postcss.config.js"
  ]
}