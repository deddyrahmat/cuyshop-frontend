{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/global.d.ts"
    ], // Tambahkan path ke file deklarasi Anda
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "vite.config.ts",
    "src/**/*",
    "tailwind.config.js",
    ".eslintrc.cjs",
    "postcss.config.js"
  ]
}